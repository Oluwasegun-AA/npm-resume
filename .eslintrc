
{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "js": true
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "jest": true
  },
  "rules": {
    "max-len": [1, 80, 2],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "import/no-named-as-default": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "no-shadow": 0,
    "import/no-unresolved": [2, { "commonjs": true , "amd": true}],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "arrow-body-style": [ 2, "always" ],
    "arrow-parens": [ 2, "always" ],
    "arrow-spacing": [ 2, { "before": true, "after": true }],
    "constructor-super": 2,
    "generator-star-spacing": [ 2, "before" ],
    "no-arrow-condition": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "object-shorthand": [ 2, "never" ],
    "prefer-arrow-callback": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "require-yield": 2,
    "no-trailing-spaces": 2,
    "camelcase": 2,
    "require-jsdoc": [ 2, {
      "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": false
      }
  }],
  "valid-jsdoc": [ 2, {
    "requireReturn": false,
    "requireReturnDescription": false,
    "requireParamDescription": true,
    "prefer": {
        "return": "returns"
    }
}]
  },
  "globals": {
    "window": true,
    "$": true,
    "document": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".png"]
      }
    }
  }
}